<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/main_background"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/astronomia_button"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_astronomia"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageButton
            android:id="@+id/biodiversidade_button"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_biodiversidade"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <ImageButton
            android:id="@+id/origemevolucao_button"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_origemevolucao"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        >
        <View
            android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/configurar_button"
            android:layout_alignStart="@id/strut"
            android:layout_margin="20dp"
            android:src="@drawable/btn_configuracao_1"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/fechar_button"
            android:layout_alignEnd="@id/strut"
            android:layout_margin="20dp"
            android:src="@drawable/btn_fechar_1"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

</RelativeLayout>